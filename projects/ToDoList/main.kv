#:kivy 2.1.0

<ToDoList>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        row_default_height: 50
        row_force_default: True
        Label:
            bold: True
            color: [0, 0, 0, 1]
            halign: 'center'
            font_size: 24
            font_name: 'Montserrat'
            font_weight: 600
            padding: [10, 0]
            text_size: self.size
            text: "Tasks"
            valign: 'center'
