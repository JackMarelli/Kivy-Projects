#:kivy 2.1.0

<NewTaskPopUp>:
    title: 'New Task'
    size_hint: (None, None)
    size: (344, 524)
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: "titleInput"
            hint_text: "Title"
            size_hint: 1, None
            size: 0, 30
        TextInput:
            id: "descInput"
            hint_text: "Details"
            size_hint: 1, None
            size: 0, 30
        BoxLayout:
            size_hint: 1, 0.2
            ImageButton:
                source: "images/svg/hamb-menu.svg"
                size_hint: 0.15, 0.5
                pos_hint: {"x":0.0, "y":0.25}
            ImageButton:
                source: "images/svg/clock.svg"
                size_hint: 0.15, 0.5
                pos_hint: {"x":0.0, "y":0.25}
            ImageButton:
                source: "images/svg/star-outline.svg"
                size_hint: 0.15, 0.5
                pos_hint: {"x":0.0, "y":0.25}
            Button:
                text: "Save"
                on_press: addTask()
        Widget:

<ToDoList>
    canvas.before:
        Color:
            rgba: .16, .16, .16, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            color: [1, 1, 1, 1]
            halign: 'center'
            height: 50
            font_size: 20
            font_name: 'Montserrat_Bold'
            font_weight: 600
            padding: [10, 0]
            size_hint: 1, 0.1
            text: "Tasks"
            valign: 'center'
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.07
            Image:
                size: 0.1, 0.5
                size_hint: 0.5, 1
                source: 'images/star.png'
                size: self.texture_size
            Label:
                text: "Le mie attivit√†"
            Label:
                text: "+ New list"
        BoxLayout:
            id: "homeTaskList"
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 0.5
                Line:    # --- adds a border --- #
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            orientation: "vertical"
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    Line:    # --- adds a border --- #
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                text: "task 1"
                markup: True
                halign: "left"
                valign: "top"
                size_hint: 1, None
                size: self.texture_size
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    Line:    # --- adds a border --- #
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                text: "task 2"
                markup: True
                halign: "left"
                valign: "top"
                size_hint: 1, None
                size: self.texture_size
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    Line:    # --- adds a border --- #
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                text: "task 3"
                markup: True
                halign: "left"
                valign: "top"
                size_hint: 1, None
                size: self.texture_size
            Widget:
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            Image:
                size: 0.1, 0.5
                source: 'images/hamb-menu.png'
                size: self.texture_size
            Button:
                on_press: root.newTaskPopUp()
                background_normal: "images/plus.png"
                size_hint: .3, .5
                pos_hint: {"x":0.35, "y":0.3}
            Image:
                size: 0.1, 0.5
                source: 'images/meatb-menu.png'
                size: self.texture_size









